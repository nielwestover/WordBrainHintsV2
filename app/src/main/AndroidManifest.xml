<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.afterglowapps.wordbrainhints.v1" >

    <application
        android:name="com.afterglowapps.wordbrainhints.v1.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.afterglowapps.wordbrainhints.v1.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.afterglowapps.wordbrainhints.v1.PackActivity"
            android:parentActivityName="com.afterglowapps.wordbrainhints.v1.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.afterglowapps.wordbrainhints.v1.MainActivity" />
        </activity>
        <activity
            android:name="com.afterglowapps.wordbrainhints.v1.HintsActivity"
            android:parentActivityName="com.afterglowapps.wordbrainhints.v1.PackActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.afterglowapps.wordbrainhints.v1.PackActivity" />
        </activity>
    </application>

</manifest>
